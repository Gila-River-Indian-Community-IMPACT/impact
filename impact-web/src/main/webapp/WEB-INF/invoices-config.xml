<!DOCTYPE faces-config PUBLIC
    "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
    "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config xmlns="http://java.sun.com/JSF/Configuration">
  <!--Reports Tab-->
  <!-- menu items -->
  <managed-bean>
    <managed-bean-name>menuItem_invoices</managed-bean-name>
    <managed-bean-class>
      us.oh.state.epa.stars2.webcommon.menu.SimpleMenuItem
    </managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
     <managed-property>
      <property-name>beanName</property-name>
      <value>menuItem_invoices</value>
    </managed-property>
    <managed-property>
      <property-name>label</property-name>
      <value>Invoices</value>
    </managed-property>
    <managed-property>
      <property-name>name</property-name>
      <value>invoices</value>
    </managed-property>
    <managed-property>
      <property-name>viewIDs</property-name>
      <list-entries>
        <value-class>java.lang.String</value-class>
        <value>/inv/invoices.jsp</value>
      </list-entries>
    </managed-property>
    <managed-property>
      <property-name>children</property-name>
      <list-entries>
        <value-class>
          us.oh.state.epa.stars2.webcommon.menu.SimpleMenuItem
        </value-class>
        <value>#{menuItem_InvSearch}</value>
        <value>#{menuItem_InvDetail}</value>        
      </list-entries>
    </managed-property>
    <managed-property>
      <property-name>outcome</property-name>
      <value>invoices</value>
    </managed-property>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>menuItem_InvSearch</managed-bean-name>
    <managed-bean-class>
      us.oh.state.epa.stars2.webcommon.menu.SimpleMenuItem
    </managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
     <managed-property>
      <property-name>beanName</property-name>
      <value>menuItem_InvSearch</value>
    </managed-property>
    <managed-property>
      <property-name>label</property-name>
      <value>Invoice Search</value>
    </managed-property>
    <managed-property>
      <property-name>name</property-name>
      <value>invoices.search</value>
    </managed-property>
    <managed-property>
      <property-name>viewIDs</property-name>
      <list-entries>
        <value-class>java.lang.String</value-class>
        <value>/inv/invSearch.jsp</value>
      </list-entries>
    </managed-property>
    <managed-property>
      <property-name>outcome</property-name>
      <value>InvSearch</value>
    </managed-property>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>menuItem_InvDetail</managed-bean-name>
    <managed-bean-class>
      us.oh.state.epa.stars2.webcommon.menu.SimpleMenuItem
    </managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
     <managed-property>
      <property-name>beanName</property-name>
      <value>menuItem_InvDetail</value>
    </managed-property>
    <managed-property>
      <property-name>label</property-name>
      <value>Invoice Detail</value>
    </managed-property>
    <managed-property>
      <property-name>name</property-name>
      <value>invoices.detail</value>
    </managed-property>
    <managed-property>
       <property-name>disabled</property-name>
       <value>true</value>
    </managed-property>
    <managed-property>
      <property-name>viewIDs</property-name>
      <list-entries>
        <value-class>java.lang.String</value-class>
        <value>/inv/invoice.jsp</value>
        <value>/inv/tvChangeInvoiceDate.jsp</value>
        <value>/inv/ntvChangeInvoiceDate.jsp</value>
        <value>/inv/reviewInvoiceList.jsp</value>        
      </list-entries>
    </managed-property>
    <managed-property>
      <property-name>children</property-name>
      <list-entries>
        <value-class>
          us.oh.state.epa.stars2.webcommon.menu.SimpleMenuItem
        </value-class>
      </list-entries>
    </managed-property>
    <managed-property>
      <property-name>outcome</property-name>
      <value>invoiceDetail</value>
    </managed-property>
  </managed-bean>  
  <managed-bean>
    <managed-bean-name>invoiceDetail</managed-bean-name>
    <managed-bean-class>
      us.oh.state.epa.stars2.app.invoice.InvoiceDetail
    </managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>permitService</property-name>
            <value>#{permitBO}</value>
        </managed-property>
        <managed-property>
            <property-name>infrastructureService</property-name>
            <value>#{infrastructureBO}</value>
        </managed-property>
        <managed-property>
            <property-name>facilityService</property-name>
            <value>#{facilityBO}</value>
        </managed-property>
        <managed-property>
            <property-name>emissionsReportService</property-name>
            <value>#{emissionsReportBO}</value>
        </managed-property>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>invoiceSearch</managed-bean-name>
    <managed-bean-class>
      us.oh.state.epa.stars2.app.invoice.InvoiceSearch
    </managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>infrastructureService</property-name>
            <value>#{infrastructureBO}</value>
        </managed-property>    
  </managed-bean>
  
  <!-- end menu items -->
  <navigation-rule>    
    <navigation-case>
      <from-outcome>InvSearch</from-outcome>
      <to-view-id>/inv/invSearch.jsp</to-view-id>
      <redirect />
    </navigation-case>   
    <navigation-case>
      	<from-outcome>invoiceDetail</from-outcome>
	    <to-view-id>/inv/invoice.jsp</to-view-id>    
	    <redirect/>  
	</navigation-case>
  </navigation-rule>
    
  <navigation-rule><!-- Adjustments -->
  	 
      <from-view-id>/inv/invoice.jsp</from-view-id>	  
       <navigation-case>
      	<from-outcome>dialog:invoiceDoc</from-outcome>
      	<to-view-id>/inv/opengendoc.jsp</to-view-id>
      </navigation-case>
	  <navigation-case>
		<from-action>#{invoiceDetail.adjustmentDialog}</from-action>
		<from-outcome>dialog:createAdjustment</from-outcome>
        <to-view-id>/inv/createAdjustment.jsp</to-view-id> 
      </navigation-case>
	  <navigation-case>
		<from-action>#{invoiceDetail.createNewAdjustment}</from-action>
		<from-outcome>newAdjustment</from-outcome>
        <to-view-id>/inv/invoice.jsp</to-view-id>
	    <redirect/> 
      </navigation-case>      	
      <navigation-case>
		<from-outcome>dialog:viewContact</from-outcome>
        <to-view-id>/inv/viewContact.jsp</to-view-id>
      </navigation-case>
	  <navigation-case>
		<from-action>#{invoiceDetail.editBillAddress}</from-action>
		<from-outcome>newAddress</from-outcome>
        <to-view-id>/inv/invoice.jsp</to-view-id>
	    <redirect/> 
      </navigation-case>            
      <navigation-case>
        <from-outcome>dialog:confirmIndicatorAdjustment</from-outcome>
        <to-view-id>/inv/confirmIndicatorAdjustment.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
        <from-outcome>dialog:createNewRevenueId</from-outcome>
        <to-view-id>/inv/createNewRevenueId.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
        <from-outcome>dialog:confirmUnPost</from-outcome>
        <to-view-id>/inv/confirmUnPost.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
        <from-outcome>dialog:confirmInvoiceOperation</from-outcome>
        <to-view-id>/inv/confirmOperation.jsp</to-view-id>
      </navigation-case>
      <navigation-case>
		<from-outcome>dialog:noteDetail</from-outcome>
        <to-view-id>/inv/noteDetail.jsp</to-view-id>
      </navigation-case>    
    </navigation-rule>       
</faces-config>
